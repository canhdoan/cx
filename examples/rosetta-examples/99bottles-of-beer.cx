package main

func bottles(i i32) (result str) {
	if i32.eq(i, 0) {
		result = "No more bottles"
	} else if i32.eq(i, 1) {
		result = "1 bottle"
	} else {
		result = str.concat(i32.str(i), " bottles")
	}
}

func main() {
	var i i32
	for i = 99; i > 0; i = i - 1 {
		str.print(bottles(i) + " of beer on the wall\n")
		str.print(bottles(i) + " of beer\n")
		str.print("Take one down, pass it around\n")
		str.print(bottles(i) + " of beer on the wall\n")
	}
}
